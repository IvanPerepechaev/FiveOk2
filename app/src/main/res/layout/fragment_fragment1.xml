<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E2339"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/angry_btn3"
        android:layout_width="269dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_launcher_background"
        android:text="Средний балл"
        android:textColor="#161414"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/angry_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/angry_btn"
        app:layout_constraintTop_toBottomOf="@+id/angry_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/angry_btn"
        android:layout_width="269dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_launcher_background"
        android:text="Количество пятерок"
        android:textColor="#161414"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <Button
        android:id="@+id/angry_btn2"
        android:layout_width="269dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/ic_launcher_background"
        android:text="Количество пятерок"
        android:textColor="#161414"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/angry_btn3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/angry_btn3"
        app:layout_constraintTop_toBottomOf="@+id/angry_btn3"
        app:layout_constraintVertical_bias="0.017" />

</androidx.constraintlayout.widget.ConstraintLayout>